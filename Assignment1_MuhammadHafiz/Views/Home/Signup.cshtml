@model Assignment1_MuhammadHafiz.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Sign Up</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/Content/StyleSheet2.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body style="background-color:#f1f2f7">
    <!--NavBar-->
    <row>
        <nav class="navbar navbar-expand-lg navbar-light fixed">
            <div class="container">
                <a href="~/Home/Index">
                    <img src="~/Images/logoktm.png" style="height:28px" />
                </a>

                <!-- links toggle -->
                <button class="navbar-toggler order-first" type="button" data-toggle="collapse" data-target="#links" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="navbar-toggler-icon"></i>
                </button>

                <!-- account toggle -->
                <button class="navbar-toggler order-first" type="button" data-toggle="collapse" data-target="#links" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="navbar-toggler-icon"></i>
                </button>

                <div class="collapse navbar-collapse" id="links" style="margin-left:100px">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item" style="margin-left:12px; margin-right:12px; font-size:14px">
                            <a class="nav-link" href="~/Home/Index">Book Tickets</a>
                        </li>
                        <li class="nav-item" style="margin-left:12px; margin-right:12px; font-size:14px">
                            <a class="nav-link" href="#">My Bookings</a>
                        </li>
                        <li class="nav-item" style="margin-left:12px; margin-right:12px; font-size:14px">
                            <a class="nav-link" href="#">Routes</a>
                        </li>
                        <li class="nav-item" style="margin-left:12px; margin-right:12px; font-size:14px">
                            <a class="nav-link" href="#">Contact Us</a>
                        </li>
                    </ul>
                </div>
                <div class="collapse navbar-collapse" id="account">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active"><a class="nav-link" href="~/Home/Login.cshtml" style="margin-left:6px; margin-right:6px; font-size:14px">Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="~/Home/Signup.cshtml" style="margin-left:6px; margin-right:6px; font-size:14px">Sign up</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </row>
    <row>
        <h4>Sign Up</h4>
    </row>

    
    @using (Html.BeginForm())
    {
        <p>Name<br />@Html.TextBoxFor(x => x.Name)</p>
        <p>IC/Passport<br />@Html.TextBoxFor(x => x.ICpass)</p>
        <p>Email<br />@Html.TextBoxFor(x => x.Email)</p>
        <p>Password<br />@Html.TextBoxFor(x => x.Password)</p>

        <input type="submit" value="Sign Up" class="button" />
    }
    <p>
        Already have an account? @Html.ActionLink("Sign in here", "Login")
    </p>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
